<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<body id="store">
<h1>Our Garden Catalog</h1>

<% @products.each do |product| %>
	<div class="entry">
	  <%= link_to image_tag(product.image_url, :alt => product.title, :title => "Add to cart"), line_items_path(:product_id => product), :method => :post, :remote => true %>
	  <h3><%= link_to product.title, line_items_path(:product_id => product), :method => :post, :remote => true %></h3> 
	  <%= sanitize(product.description) %>
	  <div class="price_line">
		<span class="price"><%= number_to_currency(product.price) %></span>
		<%= button_to 'Add to Cart', line_items_path(:product_id => product),
		    :remote => true %>
	  </div>
	</div>  
</body>
<% end %>